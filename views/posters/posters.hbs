{{#extends 'base'}}

{{#block 'content'}}
<h2>Our Posters List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Cost</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each posters}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.date}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.stock}}</td>
        </tr>
        {{/each}}
    </tbody>

</table>

{{/block}}
{{/extends}}