{{#extends 'base'}}

{{#block 'content'}}
<h2>Search Posters</h2>
{{!-- processing form via GET does not need a CSRF token --}}
<form method="GET">
    {{{form}}}
    <input type="submit" value="Search Poster" class="btn btn-primary btn-sm mb-5"/>
</form>



<h2>Our Posters List</h2>
<a href="/posters/create" class="btn btn-primary mt-4 mb-3 btn-sm">Create a Poster</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Date</th>
            <th>Cost</th>
            <th>Stock</th>
            <th>Width(cm)</th>
            <th>Height(cm)</th>
            <th>Image</th>
            <th></th>
            <th></th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        
        {{#each posters}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td><span class="badge badge-pill badge-info">{{this.category.name}}</span></td>
            
            <td>{{#each this.tags}}<span class="badge badge-pill badge-success">{{this.name}}</span> {{/each}}</td>
           
            <td>{{this.date}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.width}}</td>
            <td>{{this.height}}</td>
            <td>{{#if this.image_url}}
                <img class="img-fluid" src="{{this.image_url}}"/>
                {{/if}}
            </td>
            <td>
                <a href="/shoppingCart/{{this.id}}/add" class="btn btn-info btn-sm">Add to Cart</a>
            </td>
            <td>
                <a href="/posters/{{this.id}}/update"  class="btn btn-primary btn-sm">Update</a>
            </td>
            <td>
                <a href="/posters/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
            

        </tr>
        {{/each}}
    </tbody>

</table>

{{/block}}
{{/extends}}