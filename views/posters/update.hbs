{{#extends 'base'}}

{{#block 'content'}}
<div>
    <h2>Update Poster: {{poster.title}}</h2>
    <form method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
        {{{form}}}
        <input type="submit" value="Update Poster" class="btn btn-primary" />
        <a href="/posters/all-posters" class="btn btn-danger">Cancel</a>
    </form>
</div>


{{/block}}

{{/extends}}
